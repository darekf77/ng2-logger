{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2022",
      "dom"
    ],
    "types": [
      "node",
      "jest"
    ],
    "rootDir": "./tmp-src",
    "outDir": "dist"
  },
  "include": [
    "tmp-src/**/*"
  ],
  "exclude": [
    "node_modules",
    "preview",
    "projects",
    "docs",
    "dist",
    "bundle",
    "example",
    "examples",
    "browser",
    "module",
    "tmp-src",
    "src/tests",
    "src/assets",
    "src/**/*.spec.ts",
    "tmp-site-src",
    "tmp-tests-context"
  ]
}
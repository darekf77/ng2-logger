{
  "compileOnSave": true,
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2022",
      "dom"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "./tmp-src",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2022",
    "types": [
      "body-parser",
      "cors",
      "dateformat",
      "diff",
      "express",
      "express-fileupload",
      "fs-extra",
      "glob",
      "http-proxy",
      "http-proxy-middleware",
      "json5",
      "lodash",
      "lodash-es",
      "minimatch",
      "multer",
      "node",
      "progress",
      "semver",
      "vitest/globals"
    ]
  },
  "exclude": [
    "preview",
    "projects",
    "docs",
    "dist",
    "bundle",
    "example",
    "examples",
    "browser",
    "module",
    "src/tests",
    "src/assets",
    "src/**/*.spec.ts",
    "tmp-site-src",
    "tmp-tests-context"
  ],
  "include": [
    "tmp-src/**/*"
  ]
}
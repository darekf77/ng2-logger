{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types"],
    "lib": ["dom", "es2015"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}

{
  "compileOnSave": true,
  "compilerOptions": {
      "declaration": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "module": "commonjs",
      "skipLibCheck": true,
      "sourceMap": true,
      "target": "es5",
      "typeRoots": [
          "node_modules/@types"
      ],
      "lib": [
          "dom",
          "es2015"
      ],
      "types": [
          "node"
      ],
      "outDir": "dist",
      "baseUrl": "./src"
  },
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules",
      "preview",
      "docs",
      "dist",
      "bundle",
      "tests"
  ]
}